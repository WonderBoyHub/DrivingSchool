@page "/generhvervelse-af-koerekort"

<PageTitle>Generhvervelse af kørekort | Blangstedgård Køreskole</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large">
    <MudText Typo="Typo.h3" Class="mb-4" Color="Color.Primary">
        Generhvervelse af kørekort
    </MudText>

    <MudGrid>
        <MudItem xs="12" md="8">
            <MudPaper Elevation="2" Class="pa-4 mb-4">
                <MudText Typo="Typo.body1" Class="mb-3">
                    Blangstedgård Køreskole hjælper dig med generhvervelse af kørekort i Odense.
                    Vi tilbyder adgang til en online læringsportal i 4 måneder og typisk 1 køretime før køreprøven.
                </MudText>

                <MudText Typo="Typo.h6" Class="mb-2" Color="Color.Secondary">
                    Krav og proces:
                </MudText>

                <MudList T="object">
                    <MudListItem T="object">
                        <MudText>Du skal bestå en kontrollerende køreprøve med både teori og praksis</MudText>
                    </MudListItem>
                    <MudListItem T="object">
                        <MudText>Der er ingen obligatorisk krav om køretimer, men det anbefales at genopfriske den teoretiske viden</MudText>
                    </MudListItem>
                    <MudListItem T="object">
                        <MudText>Efter bestået prøve følger en 3-årig prøvetid</MudText>
                    </MudListItem>
                    <MudListItem T="object">
                        <MudText>Ved spirituskørsel skal du først gennemføre et ANT-kursus</MudText>
                    </MudListItem>
                </MudList>
            </MudPaper>

            <MudPaper Elevation="2" Class="pa-4 mb-4">
                <MudText Typo="Typo.h6" Class="mb-2" Color="Color.Secondary">
                    Hvorfor vælge Blangstedgård Køreskole:
                </MudText>

                <MudList T="object">
                    <MudListItem T="object" Icon="Icons.Material.Filled.DirectionsCar">
                        <MudText>Moderne, lettermanøvrerede køretøjer</MudText>
                    </MudListItem>
                    <MudListItem T="object" Icon="Icons.Material.Filled.Security">
                        <MudText>De nyeste sikkerhedsfunktioner</MudText>
                    </MudListItem>
                    <MudListItem T="object" Icon="Icons.Material.Filled.Support">
                        <MudText>Støttende læringsmiljø</MudText>
                    </MudListItem>
                    <MudListItem T="object" Icon="Icons.Material.Filled.Feedback">
                        <MudText>Personlig feedback</MudText>
                    </MudListItem>
                    <MudListItem T="object" Icon="Icons.Material.Filled.EmojiEvents">
                        <MudText>Mål om at hjælpe dig med at få dit kørekort tilbage</MudText>
                    </MudListItem>
                </MudList>
            </MudPaper>

            <MudPaper Elevation="2" Class="pa-4 mb-4">
                <MudText Typo="Typo.h6" Class="mb-2" Color="Color.Secondary">
                    Nødvendige dokumenter:
                </MudText>

                <MudList T="object">
                    <MudListItem T="object">
                        <MudText>Besøg Borgerservice</MudText>
                    </MudListItem>
                    <MudListItem T="object">
                        <MudText>Få tilladelse fra Færdselsstyrelsen</MudText>
                    </MudListItem>
                    <MudListItem T="object">
                        <MudText>Medbring tilladelsesdokument (P23)</MudText>
                    </MudListItem>
                    <MudListItem T="object">
                        <MudText>Medbring pas og pasfoto</MudText>
                    </MudListItem>
                </MudList>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="4">
            <MudPaper Elevation="2" Class="pa-4 mb-4">
                <MudText Typo="Typo.h6" Class="mb-2" Color="Color.Primary">
                    Kontakt os
                </MudText>

                <MudText Typo="Typo.body2" Class="mb-2">
                    <MudIcon Icon="Icons.Material.Filled.Phone" Class="mr-2" />
                    <strong>Telefon:</strong> (+45) 60 63 99 77
                </MudText>
                <MudText Typo="Typo.body2" Class="mb-2">
                    <MudIcon Icon="Icons.Material.Filled.Email" Class="mr-2" />
                    <strong>Email:</strong> post@blangsted-autoskole.dk
                </MudText>
                <MudText Typo="Typo.body2" Class="mb-4">
                    <MudIcon Icon="Icons.Material.Filled.LocationOn" Class="mr-2" />
                    <strong>Adresse:</strong> Blommegrenen 197, 5220 Odense
                </MudText>

                <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" Href="tel:+4560639977" Class="mb-2">
                    Ring til os
                </MudButton>
                <MudButton Variant="Variant.Outlined" Color="Color.Primary" FullWidth="true" Href="/kontakt">
                    Send besked
                </MudButton>
            </MudPaper>

            <MudPaper Elevation="2" Class="pa-4">
                <MudText Typo="Typo.h6" Class="mb-2" Color="Color.Primary">
                    Pris
                </MudText>
                <MudText Typo="Typo.h5" Color="Color.Secondary" Class="mb-2">
                    1.850,00 DKK
                </MudText>
                <MudText Typo="Typo.body2" Class="mb-4">
                    Orienterende Prøve eller Generhvervelse
                </MudText>
                <MudButton Variant="Variant.Filled" Color="Color.Secondary" FullWidth="true" Href="/betaling">
                    Se betalingsinfo
                </MudButton>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <MudDivider Class="my-6" />

    <MudText Typo="Typo.h5" Class="mb-4" Color="Color.Primary">
        Book dit forløb
    </MudText>

    <MudPaper Elevation="1" Class="pa-4">
        <iframe style="width: 100%" id="ddframe" src="https://app.drivedesk.dk/api/school/62/branch/759/limit/all/classes?theme=standard&seats=available&show_prices=show"  onload="iFrameResize()" scrolling="no" frameborder="0"></iframe>
    </MudPaper>
</MudContainer>