@page "/kontakt"

<PageTitle>Kontakt Blangstedgaard Køreskole Odense - Blommegrenen</PageTitle>

<!-- Hero Section -->
<section class="hero-section" style="min-height: 40vh; background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)); position: relative; overflow: hidden;">
    <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: url('/lib/bootstrap/dist/assets/misc/safety.jpg') center/cover; opacity: 0.2;"></div>
    <div class="hero-content" style="position: relative; z-index: 1; background: none; padding: 4rem 2rem; text-align: center;">
        <h1 class="hero-title" style="color: white; margin-bottom: 1rem;">Kontakt Os</h1>
        <p class="hero-subtitle" style="color: white; opacity: 0.9;">Vi er klar til at hjælpe dig med dit kørekort</p>
    </div>
</section>

<div class="container-fluid-custom" style="margin-top: -2rem; position: relative; z-index: 2;">

    <!-- Quick Contact Cards -->
    <div class="contact-grid" style="margin-bottom: 4rem;">
        <a href="tel:+4560639977" class="contact-item" style="text-decoration: none; color: inherit; transition: all 0.3s ease; background: var(--surface); border-radius: 16px; box-shadow: 0 8px 32px var(--shadow); border: 1px solid var(--border-light);">
            <div style="background: var(--primary-color); color: white; width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-bottom: 1rem;">
                <MudIcon Icon="Icons.Material.Filled.Phone" Style="font-size: 1.5rem;" />
            </div>
            <div style="text-align: center;">
                <div style="font-weight: 600; margin-bottom: 0.5rem; color: var(--text-dark);">Ring til os</div>
                <div style="color: var(--primary-color); font-weight: 600;">(+45) 60 63 99 77</div>
                <div style="font-size: 0.9rem; color: #666; margin-top: 0.5rem;">Man-Fre: 08:00-17:00</div>
            </div>
        </a>

        <a href="mailto:post@blangsted-autoskole.dk" class="contact-item" style="text-decoration: none; color: inherit; transition: all 0.3s ease; background: var(--surface); border-radius: 16px; box-shadow: 0 8px 32px var(--shadow); border: 1px solid var(--border-light);">
            <div style="background: var(--secondary-color); color: white; width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-bottom: 1rem;">
                <MudIcon Icon="Icons.Material.Filled.Email" Style="font-size: 1.5rem;" />
            </div>
            <div style="text-align: center;">
                <div style="font-weight: 600; margin-bottom: 0.5rem; color: var(--text-dark);">Send en email</div>
                <div style="color: var(--primary-color); font-weight: 600;">post@blangsted-autoskole.dk</div>
                <div style="font-size: 0.9rem; color: #666; margin-top: 0.5rem;">Vi svarer indenfor 24 timer</div>
            </div>
        </a>

        <div class="contact-item" style="background: var(--surface); border-radius: 16px; box-shadow: 0 8px 32px var(--shadow); border: 1px solid var(--border-light); cursor: default;">
            <div style="background: var(--accent-color); color: white; width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-bottom: 1rem;">
                <MudIcon Icon="Icons.Material.Filled.LocationOn" Style="font-size: 1.5rem;" />
            </div>
            <div style="text-align: center;">
                <div style="font-weight: 600; margin-bottom: 0.5rem; color: var(--text-dark);">Besøg os</div>
                <div style="color: var(--text-dark); font-weight: 500;">Blommegrenen 197</div>
                <div style="color: var(--text-dark); font-weight: 500;">5220 Odense</div>
                <div style="font-size: 0.9rem; color: #666; margin-top: 0.5rem;">MobilePay: 555822</div>
            </div>
        </div>
    </div>

    <MudGrid Spacing="4">
        <MudItem xs="12" md="6">

            <!-- Services We Offer -->
            <div style="background: var(--surface); border-radius: 16px; padding: 2rem; box-shadow: 0 8px 32px var(--shadow); border: 1px solid var(--border-light); margin-bottom: 2rem;">
                <h3 style="font-size: 1.5rem; font-weight: 600; color: var(--text-dark); margin-bottom: 2rem; text-align: center;">Hvad kan vi hjælpe med?</h3>

                <div style="display: grid; grid-template-columns: 1fr; gap: 1rem;">
                    <div style="display: flex; align-items: center; gap: 1rem; padding: 1rem; background: rgba(215, 53, 2, 0.05); border-radius: 12px; transition: all 0.3s ease;">
                        <div style="background: var(--primary-color); color: white; width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <MudIcon Icon="Icons.Material.Filled.School" />
                        </div>
                        <div>
                            <div style="font-weight: 600; color: var(--text-dark);">Generhvervelse af Kørekort</div>
                            <div style="font-size: 0.9rem; color: #666;">Få dit kørekort tilbage</div>
                        </div>
                    </div>

                    <div style="display: flex; align-items: center; gap: 1rem; padding: 1rem; background: rgba(215, 53, 2, 0.05); border-radius: 12px; transition: all 0.3s ease;">
                        <div style="background: var(--primary-color); color: white; width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <MudIcon Icon="Icons.Material.Filled.LocalShipping" />
                        </div>
                        <div>
                            <div style="font-weight: 600; color: var(--text-dark);">Trailerkørekort</div>
                            <div style="font-size: 0.9rem; color: #666;">Professionel traileruddannelse</div>
                        </div>
                    </div>

                    <div style="display: flex; align-items: center; gap: 1rem; padding: 1rem; background: rgba(215, 53, 2, 0.05); border-radius: 12px; transition: all 0.3s ease;">
                        <div style="background: var(--primary-color); color: white; width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <MudIcon Icon="Icons.Material.Filled.Assessment" />
                        </div>
                        <div>
                            <div style="font-weight: 600; color: var(--text-dark);">Kontrollerende Prøve</div>
                            <div style="font-size: 0.9rem; color: #666;">Grundig forberedelse</div>
                        </div>
                    </div>

                    <div style="display: flex; align-items: center; gap: 1rem; padding: 1rem; background: rgba(215, 53, 2, 0.05); border-radius: 12px; transition: all 0.3s ease;">
                        <div style="background: var(--primary-color); color: white; width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <MudIcon Icon="Icons.Material.Filled.DirectionsCar" />
                        </div>
                        <div>
                            <div style="font-weight: 600; color: var(--text-dark);">Køreundervisning</div>
                            <div style="font-size: 0.9rem; color: #666;">Individuel undervisning</div>
                        </div>
                    </div>

                    <div style="display: flex; align-items: center; gap: 1rem; padding: 1rem; background: rgba(215, 53, 2, 0.05); border-radius: 12px; transition: all 0.3s ease;">
                        <div style="background: var(--primary-color); color: white; width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <MudIcon Icon="Icons.Material.Filled.Quiz" />
                        </div>
                        <div>
                            <div style="font-weight: 600; color: var(--text-dark);">Teoriundervisning</div>
                            <div style="font-size: 0.9rem; color: #666;">Moderne lokaler</div>
                        </div>
                    </div>
                </div>
            </div>
        </MudItem>

        <MudItem xs="12" md="6">
            <!-- Contact Form -->
            <div style="background: var(--surface); border-radius: 16px; padding: 2rem; box-shadow: 0 8px 32px var(--shadow); border: 1px solid var(--border-light);">
                <h3 style="font-size: 1.5rem; font-weight: 600; color: var(--text-dark); margin-bottom: 2rem; text-align: center;">Send os en besked</h3>

                <MudForm Style="">
                    <MudTextField @bind-Value="@contactForm.Name"
                                  Label="Navn"
                                  Required="true"
                                  RequiredError="Navn er påkrævet"
                                  Class="mb-3" />

                    <MudTextField @bind-Value="@contactForm.Email"
                                  Label="Email"
                                  InputType="InputType.Email"
                                  Required="true"
                                  RequiredError="Email er påkrævet"
                                  Class="mb-3" />

                    <MudTextField @bind-Value="@contactForm.Phone"
                                  Label="Telefonnummer"
                                  InputType="InputType.Telephone"
                                  Class="mb-3" />

                    <MudSelect @bind-Value="@contactForm.Subject"
                               Label="Emne"
                               Required="true"
                               RequiredError="Vælg et emne"
                               Class="mb-3">
                        <MudSelectItem Value="@("Generhvervelse af kørekort")">Generhvervelse af kørekort</MudSelectItem>
                        <MudSelectItem Value="@("Trailerkørekort")">Trailerkørekort</MudSelectItem>
                        <MudSelectItem Value="@("Kontrollerende prøve")">Kontrollerende prøve</MudSelectItem>
                        <MudSelectItem Value="@("Spørgsmål om priser")">Spørgsmål om priser</MudSelectItem>
                        <MudSelectItem Value="@("Andet")">Andet</MudSelectItem>
                    </MudSelect>

                    <MudTextField @bind-Value="@contactForm.Message"
                                  Label="Besked"
                                  Lines="4"
                                  Required="true"
                                  RequiredError="Besked er påkrævet"
                                  Class="mb-4" />

                    <MudButton Variant="Variant.Filled"
                               Style="background: var(--primary-color); color: white; border-radius: 25px; font-weight: 600; padding: 1rem 2rem; box-shadow: 0 4px 15px rgba(215, 53, 2, 0.3);"
                               StartIcon="Icons.Material.Filled.Send"
                               OnClick="@SendMessage"
                               FullWidth="true">
                        Send besked
                    </MudButton>
                </MudForm>
            </div>
        </MudItem>
    </MudGrid>

    <!-- Map Section -->
    <div style="background: var(--surface); border-radius: 16px; padding: 2rem; box-shadow: 0 8px 32px var(--shadow); border: 1px solid var(--border-light); margin: 4rem 0;">
        <h3 style="font-size: 1.8rem; font-weight: 600; color: var(--text-dark); margin-bottom: 1rem; text-align: center;">Find os på kortet</h3>
        <p style="text-align: center; color: #666; margin-bottom: 2rem; font-size: 1.1rem;">
            Vi holder til på Blommegregen 197 i Odense. Ring for at aftale tid for køretimer eller kom forbi for at høre mere om vores kurser.
        </p>

        <div style="height: 400px; background: linear-gradient(135deg, #f8f9fa, #e9ecef); border-radius: 12px; display: flex; align-items: center; justify-content: center; border: 2px dashed var(--border-light);">
            <div style="text-align: center;">
                <MudIcon Icon="Icons.Material.Filled.Map" Style="font-size: 3rem; color: var(--primary-color); margin-bottom: 1rem;" />
                <div style="font-size: 1.2rem; font-weight: 600; color: var(--text-dark); margin-bottom: 0.5rem;">Interactive Map</div>
                <div style="color: #666;">Google Maps integration kommer her</div>
            </div>
        </div>
    </div>

    <!-- Additional Info Section -->
    <div style="background: var(--primary-color); color: white; border-radius: 16px; padding: 3rem 2rem; margin: 4rem 0; text-align: center;">
        <h3 style="font-size: 2rem; font-weight: 700; margin-bottom: 1rem;">Klar til at starte?</h3>
        <p style="font-size: 1.2rem; margin-bottom: 2rem; opacity: 0.9;">Kontakt os i dag og tag det første skridt mod dit kørekort</p>
        <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
            <a href="tel:+4560639977" style="background: white; color: var(--primary-color); padding: 1rem 2rem; border-radius: 50px; font-weight: 600; text-decoration: none; display: inline-flex; align-items: center; gap: 0.5rem; transition: all 0.3s ease;">
                <MudIcon Icon="Icons.Material.Filled.Phone" Size="Size.Small" />
                Ring nu
            </a>
            <a href="/priser" style="background: rgba(255,255,255,0.2); color: white; padding: 1rem 2rem; border-radius: 50px; font-weight: 600; text-decoration: none; display: inline-flex; align-items: center; gap: 0.5rem; border: 2px solid rgba(255,255,255,0.3); transition: all 0.3s ease;">
                <MudIcon Icon="Icons.Material.Filled.PriceCheck" Size="Size.Small" />
                Se priser
            </a>
        </div>
    </div>
</div>

@code {
    private ContactForm contactForm = new();

    private class ContactForm
    {
        public string Name { get; set; } = "";
        public string Email { get; set; } = "";
        public string Phone { get; set; } = "";
        public string Subject { get; set; } = "";
        public string Message { get; set; } = "";
    }

    private async Task SendMessage()
    {
        // TODO: Implement email sending logic
        // For now, show a success message
        // This would typically integrate with an email service or API
        await Task.Delay(100); // Simulate async operation

        // Reset form
        contactForm = new();

        // Show success message (you might want to use SnackBar)
