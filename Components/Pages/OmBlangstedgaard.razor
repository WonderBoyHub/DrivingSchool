@page "/om-blangstedgaard-koereskole"

<PageTitle>Om Blangstedgaard Køreskole | Din personlige køreskole i Odense</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large">
    <MudText Typo="Typo.h3" Class="mb-4" Color="Color.Primary">
        Om Blangstedgaard Køreskole
    </MudText>

    <MudGrid>
        <MudItem xs="12" md="8">
            <MudPaper Elevation="2" Class="pa-4 mb-4">
                <MudText Typo="Typo.body1" Class="mb-3">
                    Velkommen til Blangstedgaard Køreskole - din personlige køreskole i Odense.
                    Vi hjælper både unge og gamle, private og erhverv med at blive ansvarlige bilister gennem
                    professionel teoriundervisning og køreundervisning.
                </MudText>

                <MudText Typo="Typo.body1" Class="mb-3">
                    Hos os får du en personlig tilgang til køreundervisning med moderne køretøjer
                    og de nyeste sikkerhedsfunktioner. Vores mål er at skabe et støttende læringsmiljø,
                    hvor du får personlig feedback og vejledning gennem hele forløbet.
                </MudText>
            </MudPaper>

            <MudPaper Elevation="2" Class="pa-4 mb-4">
                <MudText Typo="Typo.h6" Class="mb-2" Color="Color.Secondary">
                    Vores specialer:
                </MudText>

                <MudList T="object">
                    <MudListItem T="object" Icon="Icons.Material.Filled.School">
                        <MudText><strong>Generhvervelse af kørekort:</strong> Vi hjælper dig med at få dit kørekort tilbage gennem kontrollerende prøve</MudText>
                    </MudListItem>
                    <MudListItem T="object" Icon="Icons.Material.Filled.LocalShipping">
                        <MudText><strong>Trailerkørekort:</strong> Professionel undervisning til både private og erhverv</MudText>
                    </MudListItem>
                    <MudListItem T="object" Icon="Icons.Material.Filled.Assessment">
                        <MudText><strong>Kontrollerende prøve:</strong> Grundig forberedelse til både teori og praksis</MudText>
                    </MudListItem>
                </MudList>
            </MudPaper>

            <MudPaper Elevation="2" Class="pa-4 mb-4">
                <MudText Typo="Typo.h6" Class="mb-2" Color="Color.Secondary">
                    Hvorfor vælge os:
                </MudText>

                <MudList T="object">
                    <MudListItem T="object" Icon="Icons.Material.Filled.DirectionsCar">
                        <MudText>Moderne, lettermanøvrerede køretøjer</MudText>
                    </MudListItem>
                    <MudListItem T="object" Icon="Icons.Material.Filled.Security">
                        <MudText>De nyeste sikkerhedsfunktioner</MudText>
                    </MudListItem>
                    <MudListItem T="object" Icon="Icons.Material.Filled.Support">
                        <MudText>Støttende læringsmiljø</MudText>
                    </MudListItem>
                    <MudListItem T="object" Icon="Icons.Material.Filled.Feedback">
                        <MudText>Personlig feedback og vejledning</MudText>
                    </MudListItem>
                    <MudListItem T="object" Icon="Icons.Material.Filled.LocationOn">
                        <MudText>Centralt beliggende i Odense</MudText>
                    </MudListItem>
                </MudList>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="4">
            <MudPaper Elevation="2" Class="pa-4 mb-4">
                <MudText Typo="Typo.h6" Class="mb-2" Color="Color.Primary">
                    Kontakt os
                </MudText>

                <MudText Typo="Typo.body2" Class="mb-2">
                    <MudIcon Icon="Icons.Material.Filled.Phone" Class="mr-2" />
                    <strong>Telefon:</strong> (+45) 60 63 99 77
                </MudText>
                <MudText Typo="Typo.body2" Class="mb-2">
                    <MudIcon Icon="Icons.Material.Filled.Email" Class="mr-2" />
                    <strong>Email:</strong> post@blangsted-autoskole.dk
                </MudText>
                <MudText Typo="Typo.body2" Class="mb-4">
                    <MudIcon Icon="Icons.Material.Filled.LocationOn" Class="mr-2" />
                    <strong>Adresse:</strong> Blommegrenen 197, 5220 Odense
                </MudText>

                <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" Href="tel:+4560639977" Class="mb-2">
                    Ring til os
                </MudButton>
                <MudButton Variant="Variant.Outlined" Color="Color.Primary" FullWidth="true" Href="/kontakt">
                    Send besked
                </MudButton>
            </MudPaper>

            <MudPaper Elevation="2" Class="pa-4">
                <MudText Typo="Typo.h6" Class="mb-2" Color="Color.Primary">
                    Åbningstider
                </MudText>

                <MudList T="object" Dense="true">
                    <MudListItem T="object">
                        <MudText>Ring for at aftale tid</MudText>
                    </MudListItem>
                    <MudListItem T="object">
                        <MudText><strong>Trailer holdstart:</strong> Søndag 17:00-20:00</MudText>
                    </MudListItem>
                </MudList>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>