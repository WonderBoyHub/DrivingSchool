@page "/teori"
@page "/teori-2"

<PageTitle>Teori | Blangstedgård Køreskole</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large">
    <MudText Typo="Typo.h3" Class="mb-4" Color="Color.Primary">
        Teoriundervisning
    </MudText>

    <MudGrid>
        <MudItem xs="12" md="8">
            <MudPaper Elevation="2" Class="pa-4 mb-4">
                <MudText Typo="Typo.body1" Class="mb-3">
                    Blangstedgård Køreskole tilbyder professionel teoriundervisning til både trailerkørekort og generhvervelse af kørekort.
                    Vores teoriundervisning er designet til at give dig en grundig forståelse af færdselsreglerne og sikker kørsel.
                </MudText>

                <MudAlert Severity="Severity.Info" Class="mb-4">
                    <MudText>Online læringsportal giver dig adgang i 4 måneder ved generhvervelse af kørekort.</MudText>
                </MudAlert>
            </MudPaper>

            <MudPaper Elevation="2" Class="pa-4 mb-4">
                <MudText Typo="Typo.h6" Class="mb-2" Color="Color.Secondary">
                    Teoriundervisning til stor trailer:
                </MudText>

                <MudList T="object">
                    <MudListItem T="object" Icon="Icons.Material.Filled.Event">
                        <MudText><strong>Holdstart:</strong> Søndag kl. 17:00-20:00</MudText>
                    </MudListItem>
                    <MudListItem T="object" Icon="Icons.Material.Filled.School">
                        <MudText>Grundig gennemgang af teorien</MudText>
                    </MudListItem>
                    <MudListItem T="object" Icon="Icons.Material.Filled.LocalShipping">
                        <MudText>Specifik viden om trailerkørsel</MudText>
                    </MudListItem>
                    <MudListItem T="object" Icon="Icons.Material.Filled.Security">
                        <MudText>Sikkerhedsaspekter ved trailerkørsel</MudText>
                    </MudListItem>
                    <MudListItem T="object" Icon="Icons.Material.Filled.Groups">
                        <MudText>10% rabat ved 6 personer på samme hold</MudText>
                    </MudListItem>
                </MudList>
            </MudPaper>

            <MudPaper Elevation="2" Class="pa-4">
                <MudText Typo="Typo.h6" Class="mb-2" Color="Color.Secondary">
                    Online læringsportal:
                </MudText>

                <MudList T="object">
                    <MudListItem T="object" Icon="Icons.Material.Filled.OnlineTest">
                        <MudText>4 måneders adgang</MudText>
                    </MudListItem>
                    <MudListItem T="object" Icon="Icons.Material.Filled.Quiz">
                        <MudText>Interaktive øvelser</MudText>
                    </MudListItem>
                    <MudListItem T="object" Icon="Icons.Material.Filled.Assessment">
                        <MudText>Prøveeksamen</MudText>
                    </MudListItem>
                    <MudListItem T="object" Icon="Icons.Material.Filled.Progress">
                        <MudText>Følg din fremgang</MudText>
                    </MudListItem>
                </MudList>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="4">
            <MudPaper Elevation="2" Class="pa-4 mb-4">
                <MudText Typo="Typo.h6" Class="mb-2" Color="Color.Primary">
                    Kontakt os
                </MudText>

                <MudText Typo="Typo.body2" Class="mb-2">
                    <MudIcon Icon="Icons.Material.Filled.Phone" Class="mr-2" />
                    <strong>Telefon:</strong> (+45) 60 63 99 77
                </MudText>
                <MudText Typo="Typo.body2" Class="mb-2">
                    <MudIcon Icon="Icons.Material.Filled.Email" Class="mr-2" />
                    <strong>Email:</strong> post@blangsted-autoskole.dk
                </MudText>
                <MudText Typo="Typo.body2" Class="mb-4">
                    <MudIcon Icon="Icons.Material.Filled.LocationOn" Class="mr-2" />
                    <strong>Adresse:</strong> Blommegrenen 197, 5220 Odense
                </MudText>

                <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" Href="tel:+4560639977" Class="mb-2">
                    Ring til os
                </MudButton>
                <MudButton Variant="Variant.Outlined" Color="Color.Primary" FullWidth="true" Href="/kontakt">
                    Send besked
                </MudButton>
            </MudPaper>

            <MudPaper Elevation="2" Class="pa-4">
                <MudText Typo="Typo.h6" Class="mb-2" Color="Color.Primary">
                    Relaterede kurser
                </MudText>

                <MudStack>
                    <MudButton Variant="Variant.Text" Color="Color.Secondary" FullWidth="true" Href="/trailerkoerekort">
                        Trailerkørekort
                    </MudButton>
                    <MudButton Variant="Variant.Text" Color="Color.Secondary" FullWidth="true" Href="/generhvervelse-af-koerekort">
                        Generhvervelse
                    </MudButton>
                    <MudButton Variant="Variant.Text" Color="Color.Secondary" FullWidth="true" Href="/kontrollerende-proeve">
                        Kontrollerende prøve
                    </MudButton>
                </MudStack>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>