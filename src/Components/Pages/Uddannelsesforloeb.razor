@page "/uddannelsesforloeb"

<PageTitle>Uddannelsesforløb | Blangstedgård Køreskole</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large">
    <MudText Typo="Typo.h3" Class="mb-4" Color="Color.Primary">
        Uddannelsesforløb
    </MudText>

    <MudGrid>
        <MudItem xs="12" md="8">
            <MudPaper Elevation="2" Class="pa-4 mb-4">
                <MudText Typo="Typo.body1" Class="mb-3">
                    Hos Blangstedgård Køreskole tilbyder vi strukturerede uddannelsesforløb tilpasset dine behov.
                    Vi hjælper både unge og gamle, private og erhverv med at blive ansvarlige bilister.
                </MudText>
            </MudPaper>

            <MudTabs Elevation="4" Color="Color.Primary" Rounded="true">
                <MudTabPanel Text="Generhvervelse">
                    <MudPaper Class="pa-4" Elevation="0">
                        <MudTimeline TimelineOrientation="TimelineOrientation.Vertical">
                            <MudTimelineItem Color="Color.Primary" Size="Size.Small">
                                <MudText Typo="Typo.h6">1. Kontakt Borgerservice</MudText>
                                <MudText Typo="Typo.body2">Få tilladelse fra Færdselsstyrelsen (P23 dokument)</MudText>
                            </MudTimelineItem>
                            <MudTimelineItem Color="Color.Primary" Size="Size.Small">
                                <MudText Typo="Typo.h6">2. Tilmelding</MudText>
                                <MudText Typo="Typo.body2">Kontakt os med P23, pas og pasfoto</MudText>
                            </MudTimelineItem>
                            <MudTimelineItem Color="Color.Primary" Size="Size.Small">
                                <MudText Typo="Typo.h6">3. Online portal</MudText>
                                <MudText Typo="Typo.body2">4 måneders adgang til læringsplatform</MudText>
                            </MudTimelineItem>
                            <MudTimelineItem Color="Color.Primary" Size="Size.Small">
                                <MudText Typo="Typo.h6">4. Køretime</MudText>
                                <MudText Typo="Typo.body2">Typisk 1 køretime før prøven</MudText>
                            </MudTimelineItem>
                            <MudTimelineItem Color="Color.Success" Size="Size.Small">
                                <MudText Typo="Typo.h6">5. Kontrollerende prøve</MudText>
                                <MudText Typo="Typo.body2">Teori og praksis prøve</MudText>
                            </MudTimelineItem>
                        </MudTimeline>
                    </MudPaper>
                </MudTabPanel>

                <MudTabPanel Text="Trailerkørekort">
                    <MudPaper Class="pa-4" Elevation="0">
                        <MudTimeline TimelineOrientation="TimelineOrientation.Vertical">
                            <MudTimelineItem Color="Color.Primary" Size="Size.Small">
                                <MudText Typo="Typo.h6">1. Tilmelding</MudText>
                                <MudText Typo="Typo.body2">Medbring lægeerklæring og pasfoto</MudText>
                            </MudTimelineItem>
                            <MudTimelineItem Color="Color.Primary" Size="Size.Small">
                                <MudText Typo="Typo.h6">2. Holdstart</MudText>
                                <MudText Typo="Typo.body2">Søndag kl. 17:00-20:00</MudText>
                            </MudTimelineItem>
                            <MudTimelineItem Color="Color.Primary" Size="Size.Small">
                                <MudText Typo="Typo.h6">3. Teoriundervisning</MudText>
                                <MudText Typo="Typo.body2">Grundig gennemgang af teori for trailerkørsel</MudText>
                            </MudTimelineItem>
                            <MudTimelineItem Color="Color.Primary" Size="Size.Small">
                                <MudText Typo="Typo.h6">4. Køreundervisning</MudText>
                                <MudText Typo="Typo.body2">Praktisk træning med vores trailer</MudText>
                            </MudTimelineItem>
                            <MudTimelineItem Color="Color.Success" Size="Size.Small">
                                <MudText Typo="Typo.h6">5. Køreprøve</MudText>
                                <MudText Typo="Typo.body2">Afsluttende prøve til erhvervelse af trailerkørekort</MudText>
                            </MudTimelineItem>
                        </MudTimeline>
                    </MudPaper>
                </MudTabPanel>
            </MudTabs>
        </MudItem>

        <MudItem xs="12" md="4">
            <MudPaper Elevation="2" Class="pa-4 mb-4">
                <MudText Typo="Typo.h6" Class="mb-2" Color="Color.Primary">
                    Kontakt os
                </MudText>

                <MudText Typo="Typo.body2" Class="mb-2">
                    <MudIcon Icon="Icons.Material.Filled.Phone" Class="mr-2" />
                    <strong>Telefon:</strong> (+45) 60 63 99 77
                </MudText>
                <MudText Typo="Typo.body2" Class="mb-2">
                    <MudIcon Icon="Icons.Material.Filled.Email" Class="mr-2" />
                    <strong>Email:</strong> post@blangsted-autoskole.dk
                </MudText>
                <MudText Typo="Typo.body2" Class="mb-4">
                    <MudIcon Icon="Icons.Material.Filled.LocationOn" Class="mr-2" />
                    <strong>Adresse:</strong> Blommegrenen 197, 5220 Odense
                </MudText>

                <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" Href="tel:+4560639977" Class="mb-2">
                    Ring til os
                </MudButton>
                <MudButton Variant="Variant.Outlined" Color="Color.Primary" FullWidth="true" Href="/kontakt">
                    Send besked
                </MudButton>
            </MudPaper>

            <MudPaper Elevation="2" Class="pa-4">
                <MudText Typo="Typo.h6" Class="mb-2" Color="Color.Primary">
                    Priser
                </MudText>

                <MudList T="object" Dense="true">
                    <MudListItem T="object">
                        <MudText>
                            <strong>Trailerkørekort:</strong><br />
                            4.800,00 DKK
                        </MudText>
                    </MudListItem>
                    <MudListItem T="object">
                        <MudText>
                            <strong>Generhvervelse:</strong><br />
                            1.850,00 DKK
                        </MudText>
                    </MudListItem>
                </MudList>

                <MudButton Variant="Variant.Text" Color="Color.Secondary" FullWidth="true" Href="/priser" Class="mt-2">
                    Se alle priser
                </MudButton>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>